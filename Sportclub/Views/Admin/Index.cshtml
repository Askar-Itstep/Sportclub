@using Sportclub.Entities
@model List<Administration>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Администрация клуба</h2>

@Html.ActionLink("Добавить менеджера", "Create")
<br />
<table class="table table-striped">
    <tr>
        <th>ID</th><th>Name</th><th>Birthday</th><th>Phone</th><th>Email</th><th>Gender</th>
        <th>Status</th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>@item.Id</td>
        <td>@item.User.FullName</td>
        <td>@item.User.BirthDay</td>
        <td>@item.User.Phone</td>
        <td>@item.User.Email</td>
        <td>@item.User.Gender</td>
        <td>@item.Status</td>
        <td>@Html.ActionLink("Edit", "Edit", new { id = @item.Id })</td><td>|</td>
        <td>@Html.ActionLink("Details", "Details", new { id = @item.Id })</td><td>|</td>
        <td>@Html.ActionLink("Delete", "Delete", new { id = @item.Id })</td>
    </tr>
    }
</table>