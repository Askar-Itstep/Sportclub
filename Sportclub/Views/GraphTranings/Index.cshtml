@model IEnumerable<Sportclub.Entities.GraphTraning>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Расписание тренировок</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Тренер
        </th>
        <th>
            Специализация
        </th>
        <th>
            День недели
        </th>
        <th>
            Начало
        </th>
        <th>
            Окончание
        </th>
        <th>Участники</th>
        <th>
            Прочее
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Coache.User.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Coache.Specialization.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DayOfWeek)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeBegin.GetDateTimeFormats('t')[0])
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeEnd.GetDateTimeFormats('t')[0])
        </td>
        <td>
            @foreach (var client in item) {
                @Html.DisplayFor(m => client.User.FullName)
                <span>, </span>
            }

        </td>
        <td>
            @Html.ActionLink("Записаться", "SignUp", new { id = item.Id }) |
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
